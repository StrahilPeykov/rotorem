---

<Layout title={title} description={description}>
  <!-- Hero Section -->
  <section class="bg-gradient-to-r from-primary to-primary-dark text-white py-16">
    <div class="container max-w-4xl text-center">
      <h1 class="text-4xl md:text-5xl font-bold mb-6">
        Frequently Asked Questions
      </h1>
      <p class="text-xl md:text-2xl text-blue-100 max-w-3xl mx-auto mb-8">
        Find answers to the most common questions about our appliance repair services in Varna.
      </p>
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <a href="tel:+359898340982" class="bg-white text-primary px-8 py-4 rounded-lg font-semibold hover:bg-gray-100 transition-colors shadow-lg">
          ðŸ“ž 089 834 0982
        </a>
        <a href="/en/contact" class="bg-accent text-white px-8 py-4 rounded-lg font-semibold hover:bg-accent-dark transition-colors shadow-lg">
          Contact Us
        </a>
      </div>
    </div>
  </section>

  <!-- FAQ Content -->
  <section class="py-16">
    <div class="container max-w-4xl">
      <!-- Quick Navigation -->
      <div class="mb-12">
        <h2 class="text-2xl font-bold text-gray-900 mb-6 text-center">Question Categories</h2>
        <div class="flex flex-wrap justify-center gap-3">
          {faqs.map((category, index) => (
            <a 
              href={`#category-${index}`}
              class="px-4 py-2 bg-blue-100 text-blue-800 rounded-full hover:bg-blue-200 transition-colors text-sm font-medium"
            >
              {category.category}
            </a>
          ))}
        </div>
      </div>

      <!-- FAQ Categories -->
      {faqs.map((category, categoryIndex) => (
        <div id={`category-${categoryIndex}`} class="mb-12">
          <h2 class="text-2xl font-bold text-gray-900 mb-6 border-b-2 border-primary pb-2">
            {category.category}
          </h2>
          
          <div class="space-y-4">
            {category.questions.map((faq, faqIndex) => (
              <details class="group bg-white rounded-lg shadow-md border border-gray-200 overflow-hidden">
                <summary class="flex justify-between items-center p-6 cursor-pointer hover:bg-gray-50">
                  <h3 class="text-lg font-semibold text-gray-900 pr-4">{faq.question}</h3>
                  <div class="flex-shrink-0 text-gray-500 transition-transform duration-300 group-open:rotate-180">
                    <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                      <polyline points="6 9 12 15 18 9"></polyline>
                    </svg>
                  </div>
                </summary>
                <div class="px-6 pb-6 text-gray-700 border-t border-gray-100">
                  <p class="pt-4">{faq.answer}</p>
                </div>
              </details>
            ))}
          </div>
        </div>
      ))}

      <!-- Contact CTA -->
      <div class="mt-16 bg-gradient-to-r from-primary to-primary-dark text-white p-8 rounded-2xl shadow-xl text-center">
        <h2 class="text-2xl font-bold mb-4">Didn't find the answer to your question?</h2>
        <p class="text-xl mb-6 text-blue-100">
          Contact us directly for personalized assistance
        </p>
        
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <a href="tel:+359898340982" class="bg-white text-primary px-8 py-4 rounded-lg font-semibold hover:bg-gray-100 transition-colors shadow-lg">
            ðŸ“ž 089 834 0982
          </a>
          <a href="/en/contact" class="bg-accent text-white px-8 py-4 rounded-lg font-semibold hover:bg-accent-dark transition-colors shadow-lg">
            Contact Us
          </a>
        </div>
      </div>
    </div>
  </section>

  <!-- Schema Markup for FAQ Page -->
  <script type="application/ld+json">
  {
    "@context": "https://schema.org",
    "@type": "FAQPage",
    "name": "Frequently Asked Questions - RotoRem Varna",
    "description": "Answers to the most common questions about appliance repair in Varna",
    "url": "https://www.rotorem.bg/en/faq",
    "mainEntity": [
      {
        "@type": "Question",
        "name": "How much does the diagnostic service cost?",
        "acceptedAnswer": {
          "@type": "Answer",
          "text": "Our diagnostic fee is 30 BGN (15,32 â‚¬), which covers the home visit, inspection, and diagnosis of your appliance issue."
        }
      },
      {
        "@type": "Question", 
        "name": "Do you provide same-day repairs?",
