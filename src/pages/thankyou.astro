---
import Layout from '../layouts/Base.astro';
import { getLangFromUrl, useTranslations } from '../i18n/utils';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
const isEN = lang === 'en';

const title = t('thankyou.title');
const heading = t('thankyou.heading');
const message = t('thankyou.message');
const buttonText = t('thankyou.button');
const homePath = isEN ? '/en' : '/';
---

<Layout title={title} noindex={true}>
  <section class="py-24">
    <div class="container max-w-xl mx-auto text-center">
      <div class="bg-white p-8 rounded-lg shadow-md">
        <div class="text-green-500 mx-auto w-16 h-16 mb-6">
          <svg xmlns="http://www.w3.org/2000/svg" class="w-full h-full" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><circle cx="12" cy="12" r="10"></circle><path d="m9 12 2 2 4-4"></path></svg>
        </div>
        
        <h1 class="text-2xl font-bold text-gray-900 mb-4">{heading}</h1>
        <p class="text-gray-600 mb-8">{message}</p>
        
        <a href={homePath} class="btn-primary inline-block">
          {buttonText}
        </a>
      </div>
    </div>
  </section>
</Layout>