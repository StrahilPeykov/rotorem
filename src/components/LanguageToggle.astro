---
import { getLangFromUrl, getRouteFromUrl, getLocalizedPath } from '../i18n/utils';

const lang = getLangFromUrl(Astro.url);
const route = getRouteFromUrl(Astro.url);
const targetLang = lang === 'bg' ? 'en' : 'bg';
const targetPath = getLocalizedPath(route, targetLang);
const label = lang === 'bg' ? 'EN' : 'BG';
---

<a href={targetPath} class="text-gray-700 underline hover:text-primary hover:opacity-80 font-medium px-2 py-1 rounded bg-gray-100">{label}</a>