---
import { getLangFromUrl, useTranslations } from '../i18n/utils';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
const isEN = lang === 'en';

// Define the steps for the process
const steps = [
  {
    number: 1,
    title: isEN ? 'Contact Us' : 'Свържете се с нас',
    description: isEN 
      ? 'Call us to schedule a repair appointment.'
      : 'Обадете се ни, за да запазите час за ремонт.',
    icon: `<svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z"></path></svg>`
  },
  {
    number: 2,
    title: isEN ? 'We Come to You' : 'Идваме при вас',
    description: isEN 
      ? 'Our technician arrives at your home at the scheduled time with all necessary tools and parts.'
      : 'Нашият техник пристига в дома ви в уговореното време с всички необходими инструменти и части.',
    icon: `<svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M3 9l9-7 9 7v11a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2z"></path><polyline points="9 22 9 12 15 12 15 22"></polyline></svg>`
  },
  {
    number: 3,
    title: isEN ? 'Same-Day Repair' : 'Ремонт още същия ден',
    description: isEN 
      ? 'In most cases, we diagnose and fix the problem on the same day, getting your appliance working perfectly again.'
      : 'В повечето случаи диагностицираме и отстраняваме проблема още същия ден, връщайки уреда ви в перфектно работно състояние.',
    icon: `<svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M12 6v6l4 2"/><circle cx="12" cy="12" r="10"/></svg>`
  }
];

// Section title and subtitle
const title = isEN ? 'How It Works' : 'Как работим';
const subtitle = isEN 
  ? 'Simple and efficient process to get your appliances back in working order'
  : 'Лесен и ефективен процес, за да върнем уредите ви в работен ред';

// Pricing explanation with dual currency
const pricingTitle = isEN ? 'Transparent Pricing' : 'Ниски цени';
const pricingText = isEN 
  ? 'Our diagnostic fee is only 30 BGN (15,32 €). This covers the home visit, inspection, and diagnosis of your appliance issue. You\'ll know the full repair cost before we start any work.'
  : 'Нашата такса за диагностика е само 30 лв. (15,32 €). Тя включва посещението, инспекцията и диагностиката на проблема с вашия уред. Ще знаете пълната цена за ремонта преди да започнем работа.';
---

<section class="py-16 bg-gradient-to-b from-white to-blue-50">
  <div class="container">
    <div class="text-center max-w-3xl mx-auto mb-10 md:mb-12">
      <h2 class="text-3xl font-bold text-gray-900">{title}</h2>
      <div class="w-20 h-1 bg-accent mx-auto my-4"></div>
      <p class="text-gray-800 mt-4">{subtitle}</p>
    </div>
    
    <!-- Mobile-friendly steps with gradients and good visual hierarchy -->
    <div class="grid md:grid-cols-3 gap-6 max-w-5xl mx-auto">
      {steps.map((step, index) => (
        <div class="relative bg-gradient-to-b from-white to-blue-50 p-6 rounded-lg shadow-sm border border-gray-100 text-center transform transition-transform hover:translate-y-[-4px] hover:shadow-md">
          <!-- Enhanced Step number with gradient background -->
          <div class="absolute -top-6 left-1/2 transform -translate-x-1/2">
            <div class="w-12 h-12 bg-gradient-to-r from-primary to-primary-dark rounded-full flex items-center justify-center text-white text-xl font-bold shadow-md">
              {step.number}
            </div>
          </div>
          
          <!-- Connector line between steps (hidden on mobile) -->
          {index < steps.length - 1 && (
            <div class="absolute top-6 -right-4 w-8 h-0.5 bg-gradient-to-r from-gray-300 to-gray-200 hidden md:block z-10"></div>
          )}
          
          <!-- Icon and content -->
          <div class="mt-6">
            <div class="text-primary flex justify-center items-center w-12 h-12 mx-auto mb-4">
              <Fragment set:html={step.icon} />
            </div>
            
            <h3 class="text-lg font-semibold mb-3 text-gray-900">{step.title}</h3>
            <p class="text-gray-700">{step.description}</p>
          </div>
        </div>
      ))}
    </div>
    
    <!-- Pricing info box with good mobile styling and dual currency -->
    <div class="max-w-3xl mx-auto mt-10 md:mt-12">
      <div class="bg-gradient-to-r from-blue-50 to-blue-100 rounded-lg border border-blue-200 shadow-sm overflow-hidden">
        <!-- Pricing header with accent color -->
        <div class="bg-primary/10 px-6 py-4 border-b border-blue-200">
          <div class="flex items-center gap-3">
            <div class="text-amber-500 flex-shrink-0">
              <svg xmlns="http://www.w3.org/2000/svg" class="w-8 h-8" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
                <circle cx="12" cy="12" r="10"/>
                <path d="M12 8v4l3 3"/>
              </svg>
            </div>
            <h3 class="text-xl font-semibold text-gray-900">{pricingTitle}</h3>
          </div>
        </div>
        
        <!-- Pricing content with good mobile padding -->
        <div class="p-6">
          <p class="text-gray-700">{pricingText}</p>
          
          <!-- Price comparison badges -->
          <div class="mt-4 flex flex-wrap gap-3">
            <div class="bg-white/70 backdrop-blur px-3 py-2 rounded-lg border border-blue-100 text-sm flex items-center">
              <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5 mr-2 text-green-500" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <path d="M22 11.08V12a10 10 0 1 1-5.93-9.14"/>
                <polyline points="22 4 12 14.01 9 11.01"/>
              </svg>
              <span class="text-gray-800">{isEN ? 'No hidden costs' : 'Без скрити разходи'}</span>
            </div>
            <div class="bg-white/70 backdrop-blur px-3 py-2 rounded-lg border border-blue-100 text-sm flex items-center">
              <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5 mr-2 text-green-500" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <path d="M22 11.08V12a10 10 0 1 1-5.93-9.14"/>
                <polyline points="22 4 12 14.01 9 11.01"/>
              </svg>
              <span class="text-gray-800">{isEN ? 'Quotes before work begins' : 'Оферти преди началото на работата'}</span>
            </div>
            <div class="bg-white/70 backdrop-blur px-3 py-2 rounded-lg border border-blue-100 text-sm flex items-center">
              <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5 mr-2 text-green-500" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <path d="M22 11.08V12a10 10 0 1 1-5.93-9.14"/>
                <polyline points="22 4 12 14.01 9 11.01"/>
              </svg>
              <span class="text-gray-800">{isEN ? 'Quality guarantee' : 'Гаранция за качество'}</span>
            </div>
          </div>
        </div>
      </div>
    </div>
    
    <!-- CTA buttons with shadow - PHONE AND EMAIL ONLY NOW -->
    <div class="mt-10 md:mt-12 text-center">
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <a href="tel:+359 89 834 0982" class="btn-primary inline-flex items-center justify-center shadow-lg">
          <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5 mr-2" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <path d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z"></path>
          </svg>
          {isEN ? 'Call Now' : 'Обадете се сега'}
        </a>
        
        <a href="mailto:n.ivanov.ivanov@abv.bg" class="btn-cta inline-flex items-center justify-center shadow-lg">
          <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5 mr-2" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z"></path>
            <polyline points="22,6 12,13 2,6"></polyline>
          </svg>
          {isEN ? 'Send Email' : 'Изпратете имейл'}
        </a>
      </div>
      
      <!-- Additional info text for phone booking -->
      <div class="mt-4 text-center text-gray-600 text-sm">
        <p>{isEN ? 'Call to schedule your repair appointment' : 'Обадете се за запазване на час за ремонт'}</p>
      </div>
    </div>
  </div>
</section>