        if (typeof gtag !== 'undefined') {
          gtag('event', 'unhandled_promise_rejection', {
            event_category: 'Errors',
            event_label: e.reason?.message || e.reason,
            value: 1
          });
        }
      });

      // 404 and error page monitoring
