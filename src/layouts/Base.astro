          if (event.data && event.data.type === 'NETWORK_ERROR') {
            if (typeof gtag !== 'undefined') {
              gtag('event', 'network_error', {
                event_category: 'Errors',
                event_label: event.data.url,
                value: 1
              });
            }
          }
        });
      }
