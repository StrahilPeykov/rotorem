        if (typeof gtag !== 'undefined') {
          gtag('event', 'page_not_found', {
            event_category: 'Errors',
            event_label: window.location.pathname,
            referrer: document.referrer || 'direct'
          });
        }
      }

      // Monitor slow page loads
