  <script>
    document.addEventListener('DOMContentLoaded', function() {
      // Mobile menu functionality
      const mobileMenuButton = document.getElementById('mobile-menu-button');
      const closeMenuButton = document.getElementById('close-menu-button');
      const mobileMenu = document.getElementById('mobile-menu');
      const mobileMenuLinks = document.querySelectorAll('#mobile-menu nav a');
      const menuPanel = mobileMenu?.querySelector('div');
      const floatingButton = document.getElementById('floating-phone-btn');
      
      // Mobile services submenu functionality
      const serviceToggleButtons = document.querySelectorAll('[data-mobile-services-toggle]');
      const serviceSubmenus = document.querySelectorAll('[data-mobile-services-submenu]');

      const resetServicesSubmenus = () => {
        serviceSubmenus.forEach((submenu) => submenu.classList.add('hidden'));
        serviceToggleButtons.forEach((toggle) => {
          const arrow = toggle.querySelector('[data-mobile-services-arrow]');
          if (arrow) arrow.setAttribute('style', 'transform: rotate(0deg)');
        });
      };

      function openMenu() {
        if (mobileMenu && menuPanel) {
          mobileMenu.classList.remove('hidden');
          menuPanel.classList.add('slide-in-right');
          document.body.style.overflow = 'hidden';
          if (floatingButton) floatingButton.style.display = 'none';
        }
      }

      function closeMenu() {
        if (mobileMenu && menuPanel) {
          menuPanel.classList.add('slide-out-right');
          menuPanel.classList.remove('slide-in-right');

          setTimeout(() => {
            mobileMenu.classList.add('hidden');
            menuPanel.classList.remove('slide-out-right');
            document.body.style.overflow = '';
            if (floatingButton) floatingButton.style.display = 'flex';
            resetServicesSubmenus();
          }, 300);
        }
      }

      serviceToggleButtons.forEach((toggle) => {
        toggle.addEventListener('click', () => {
          const key = toggle.getAttribute('data-mobile-services-toggle');
          const submenu = key ? document.querySelector(`[data-mobile-services-submenu="${key}"]`) : null;
          const arrow = toggle.querySelector('[data-mobile-services-arrow]');

          if (!submenu) return;

          const shouldOpen = submenu.classList.contains('hidden');
          resetServicesSubmenus();

          if (shouldOpen) {
            submenu.classList.remove('hidden');
            if (arrow) arrow.setAttribute('style', 'transform: rotate(90deg)');
          }
        });
      });

      if (mobileMenuButton) mobileMenuButton.addEventListener('click', openMenu);
      if (closeMenuButton) closeMenuButton.addEventListener('click', closeMenu);
      
      if (mobileMenu) {
        mobileMenu.addEventListener('click', function(event) {
          if (event.target === mobileMenu) closeMenu();
        });
      }
      
      mobileMenuLinks.forEach(link => {
        link.addEventListener('click', closeMenu);
      });

      // Reviews modal functionality
      const modalTrigger = document.getElementById('reviews-modal-trigger');
      const modalTriggerMobile = document.getElementById('reviews-modal-trigger-mobile');
      const modalTriggerFooter = document.getElementById('reviews-modal-trigger-footer');
      const modal = document.getElementById('reviews-modal');
      const closeModal = document.getElementById('close-reviews-modal');
      
      function openReviewsModal() {
        modal?.classList.remove('hidden');
        document.body.style.overflow = 'hidden';
        closeMenu();
        if (floatingButton) floatingButton.style.display = 'none';
      }
      
      function closeReviewsModal() {
        modal?.classList.add('hidden');
        document.body.style.overflow = '';
        if (floatingButton) floatingButton.style.display = 'flex';
      }
      
      modalTrigger?.addEventListener('click', openReviewsModal);
      modalTriggerMobile?.addEventListener('click', openReviewsModal);
      modalTriggerFooter?.addEventListener('click', openReviewsModal);
      closeModal?.addEventListener('click', closeReviewsModal);
      
      modal?.addEventListener('click', function(e) {
        if (e.target === modal) closeReviewsModal();
      });
      
      document.addEventListener('keydown', function(e) {
        if (e.key === 'Escape' && !modal?.classList.contains('hidden')) {
          closeReviewsModal();
        }
      });
    });
  </script>
