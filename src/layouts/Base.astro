      function sendToAnalytics(metric) {
        // Send to Google Analytics 4
        if (typeof gtag !== 'undefined') {
          gtag('event', metric.name, {
            event_category: 'Web Vitals',
            event_label: metric.id,
            value: Math.round(metric.name === 'CLS' ? metric.value * 1000 : metric.value),
            non_interaction: true,
            custom_parameters: {
              connection_type: navigator.connection?.effectiveType || 'unknown',
              device_memory: navigator.deviceMemory || 'unknown',
              is_mobile: /Android|iPhone|iPad|iPod|BlackBerry|IEMobile|Opera Mini/i.test(navigator.userAgent),
              url: window.location.pathname,
              timestamp: Date.now()
            }
          });
        }
        
        // Console logging in development
        if (location.hostname === 'localhost' || location.hostname.includes('netlify')) {
          const rating = metric.value <= (metric.rating?.good || 2500) ? 'good' : 
                        metric.value <= (metric.rating?.needs_improvement || 4000) ? 'needs improvement' : 'poor';
          console.log(`🔍 Web Vital: ${metric.name}`, {
            value: metric.value,
            rating: rating,
            id: metric.id,
            attribution: metric.attribution
          });
        }
      }

      // Monitor all Core Web Vitals
      getCLS(sendToAnalytics);
      getFID(sendToAnalytics);
      getFCP(sendToAnalytics);
      getLCP(sendToAnalytics);
      getTTFB(sendToAnalytics);
